<Page
    x:Class="Bill_Tracker.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Bill_Tracker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource AppBarBackgroundThemeBrush}">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Background="White" Padding="10" BorderBrush="Black" BorderThickness="0.5">
            <TextBlock Text="Welcome, Login:" FontSize="24"/>
            <PasswordBox Name="tbxPass" Margin="0,20,0,0" MaxLength="20" KeyDown="tbxPass_KeyDown"/>
            <Button Name="bttnLoginP" Content="Log In" Margin="5,20,5,5" Width="100" HorizontalAlignment="Center" Click="bttnLoginP_Click" />
        </StackPanel>
    </Grid>
</Page>
